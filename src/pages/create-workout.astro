---
import Layout from '../layouts/Layout.astro';
import WorkoutForm from '../components/WorkoutForm.astro';
import CreateExerciseModal from '../components/CreateExerciseModal.astro';
---

<Layout>
  <div class="form-container">
    <header class="form-header">
      <h1>Registrar Nuevo Entrenamiento</h1>
      <p>Completa los detalles de tu sesión. ¡Cada repetición cuenta!</p>
    </header>
    <WorkoutForm />
  </div>
  <CreateExerciseModal />
</Layout>

<style>
  .form-container {
    max-width: 56rem;
    margin: 4rem auto;
    padding: 2rem;
    text-align: center;
  }

  .form-header h1 {
    font-family: 'Poppins', sans-serif;
    font-size: 2.25rem;
    font-weight: 700;
    color: var(--primary-color);
    margin-bottom: 0.5rem;
  }

  .form-header p {
    font-family: 'Lato', sans-serif;
    font-size: 1.125rem;
    color: var(--primary-color);
    opacity: 0.9;
    margin-bottom: 3rem;
  }
</style>
