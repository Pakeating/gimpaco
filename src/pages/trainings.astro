---
import Layout from '../layouts/Layout.astro';

const response = await fetch(Astro.url.origin + '/api/retrieve-workout');
const trainings = await response.json();
---

<Layout title="Mis Entrenamientos">
  <main class="container">
    <div class="header-section">
      <h1>Nuestros Entrenamientos</h1>
      <p>Explora nuestras rutinas prediseñadas. ¡Listas para empezar a entrenar!</p>
    </div>

    <div class="trainings-grid">
      {trainings.map(training => (
        <article class="training-card">
          <div class="card-header">
            <h2>{training.name}</h2>
            <span class="exercise-count">{training.exercises.length} ejercicios</span>
          </div>
          <div class="card-body">
            <ul>
              {training.exercises.map(exercise => (
                <li>
                  <strong>{exercise.name}</strong>
                  <span>{exercise.sets.length} series</span>
                </li>
              ))}
            </ul>
          </div>
          <div class="card-footer">
            <a href={`/workout/${training.id}`} class="start-btn">Comenzar Entrenamiento &rarr;</a>
          </div>
        </article>
      ))}
    </div>
  </main>
</Layout>

<style>
  /* Styles remain the same */
  .container {
    max-width: 900px;
    margin: 2rem auto;
    padding: 0 1.5rem;
  }

  .header-section {
    text-align: center;
    margin-bottom: 3rem;
  }

  .header-section h1 {
    font-family: 'Poppins', sans-serif;
    font-size: 2.5rem;
    color: var(--primary-color);
    margin-bottom: 0.5rem;
  }

  .header-section p {
    font-size: 1.125rem;
    color: #555;
  }

  .trainings-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  .training-card {
    background-color: var(--white-color);
    border-radius: 12px;
    box-shadow: 0 8px 30px rgba(0,0,0,0.08);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .training-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 40px rgba(0,0,0,0.12);
  }

  .card-header {
    background-color: #f8f9fa;
    padding: 1.5rem;
    border-bottom: 1px solid #e9ecef;
  }

  .card-header h2 {
    font-family: 'Poppins', sans-serif;
    font-size: 1.5rem;
    margin: 0;
    color: var(--primary-color);
  }

  .exercise-count {
    font-size: 0.9rem;
    color: #6c757d;
    margin-top: 0.25rem;
    display: block;
  }

  .card-body {
    padding: 1.5rem;
    flex-grow: 1;
  }

  .card-body ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .card-body li {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 0;
    border-bottom: 1px solid #f1f3f5;
  }

  .card-body li:last-child {
    border-bottom: none;
  }

  .card-body strong {
    font-weight: 600;
    color: #343a40;
  }

  .card-body span {
    font-size: 0.95rem;
    color: #495057;
    background-color: #e9ecef;
    padding: 0.2rem 0.6rem;
    border-radius: 999px;
  }

  .card-footer {
    padding: 1.5rem;
    background-color: #f8f9fa;
    text-align: right;
  }

  .start-btn {
    font-family: 'Poppins', sans-serif;
    font-weight: 600;
    text-decoration: none;
    color: var(--accent-color);
    transition: color 0.2s ease;
  }

  .start-btn:hover {
    color: #005959;
    text-decoration: underline;
  }
</style>