---
import Layout from '../layouts/Layout.astro';
import TrainComponent from '../components/TrainComponent.astro';
---

<Layout title="Entrenamiento - Gimpaco">
  <main class="train-page-main">
    <TrainComponent />
  </main>
</Layout>

<style>
  .train-page-main {
    padding: 2rem 1rem;
    max-width: 800px;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .train-page-main {
      /* Eliminamos el padding lateral para que el contenido pueda ocupar el 100% */
      padding: 1.5rem 0;
    }
  }
</style>
