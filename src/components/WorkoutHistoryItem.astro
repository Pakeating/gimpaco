---
const { workout } = Astro.props;

// Función para formatear la fecha de una manera más legible
function formatDate(dateString) {
  const options = { year: 'numeric', month: 'long', day: 'numeric' };
  return new Date(dateString).toLocaleDateString('es-ES', options);
}
---

<div class="history-card">
  <div class="card-header">
    <span class="workout-date">{formatDate(workout.date)}</span>
    <h2 class="workout-name">{workout.name}</h2>
  </div>
  <div class="card-body">
    <h3 class="exercises-title">Ejercicios Realizados</h3>
    <ul class="exercises-list">
      {workout.exercises.map(ex => (
        <li class="exercise-item">
          <span class="exercise-name">{ex.name}</span>
          <span class="exercise-details">{ex.sets} series de {ex.reps} reps con {ex.weight}kg</span>
        </li>
      ))}
    </ul>
  </div>
</div>

<style>
  .history-card {
    background-color: var(--white-color);
    border-radius: 0.75rem;
    box-shadow: 0 4px 15px -5px rgba(0, 0, 0, 0.08), 0 2px 8px -3px rgba(0, 0, 0, 0.04);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .history-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px -10px rgba(0, 0, 0, 0.15), 0 0 15px 5px rgba(0, 128, 128, 0.1); 
  }

  .card-header {
    padding: 1.5rem;
    border-bottom: 1px solid #f0f0f0;
  }

  .workout-date {
    display: block;
    font-family: 'Lato', sans-serif;
    font-size: 0.875rem;
    color: var(--primary-color);
    opacity: 0.7;
    margin-bottom: 0.25rem;
  }

  .workout-name {
    font-family: 'Poppins', sans-serif;
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--primary-color);
    margin: 0;
  }

  .card-body {
    padding: 1.5rem;
  }

  .exercises-title {
    font-family: 'Poppins', sans-serif;
    font-size: 1rem;
    font-weight: 500;
    color: var(--primary-color);
    margin: 0 0 1rem 0;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    opacity: 0.8;
  }

  .exercises-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .exercise-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-family: 'Lato', sans-serif;
    font-size: 1rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid #f5f5f5;
  }

  .exercise-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .exercise-name {
    font-weight: 600;
    color: var(--primary-color);
  }

  .exercise-details {
    color: var(--primary-color);
    opacity: 0.9;
  }

</style>