<div id="pending-badge" class="pending-badge">
  <span id="workout-count" class="count"></span>
  <span id="workout-text" class="text"></span>
</div>

<style>
  .pending-badge {
    position: absolute;
    top: -17px; 
    left: 1.5rem;
    z-index: 10;
    background-image: linear-gradient(45deg, var(--accent-color), #ffc107);
    color: var(--primary-color);
    font-family: 'Poppins', sans-serif;
    font-weight: 600;
    font-size: 0.9rem;
    padding: 0.4rem 1rem;
    border-radius: 999px;
    box-shadow: 0 5px 15px -3px rgba(0, 0, 0, 0.2), 0 3px 6px -4px rgba(255, 193, 7, 0.5);
    display: flex;
    align-items: center;
    gap: 0.3rem;
    opacity: 0;
    transform: translateY(-10px);
    transition: opacity 0.3s ease, transform 0.3s ease, visibility 0.3s;
    visibility: hidden;
  }

  .pending-badge.visible {
    opacity: 1;
    transform: translateY(0);
    visibility: visible;
  }

  .count {
    font-size: 1.1rem;
    font-weight: 700;
  }
</style>

<script>
  // Esta función contiene la lógica para buscar los datos y actualizar el DOM.
  async function run() {
    const badge = document.getElementById('pending-badge');
    const countElement = document.getElementById('workout-count');
    const textElement = document.getElementById('workout-text');

    if (!badge || !countElement || !textElement) {
      return;
    }

    try {
      const response = await fetch('/api/retrieve-workout', { method: 'POST' });
      if (!response.ok) return;

      const data = await response.json();
      const count = data.count;

      if (count > 0) {
        countElement.textContent = count;
        textElement.textContent = ` entrenamiento${count > 1 ? 's' : ''} disponible${count > 1 ? 's' : ''}`;
        badge.classList.add('visible');
      } else {
        // Si no hay entrenamientos, nos aseguramos de que esté oculto.
        badge.classList.remove('visible');
      }
    } catch (error) {
      badge.classList.remove('visible');
    }
  }
  run();
  //Ejecutamos la función de nuevo después de cada transición de vista.
  document.addEventListener('astro:after-swap', run);
</script>
