// Simulamos una llamada asÃ­ncrona al backend para obtener los datos.
async function getPendingWorkoutCount() {
  await new Promise(resolve => setTimeout(resolve, 300));
  return 2;
}

const count = await getPendingWorkoutCount();
---

{count > 0 &&
  <div class="pending-badge">
    <span class="text">Tienes </span>
    <span class="count">{count}</span>
    <span class="text"> pendiente{count > 1 ? 's' : ''}</span>
  </div>
}

<style>
  .pending-badge {
    position: absolute;
    top: -17px; 
    left: 1.5rem;
    z-index: 10;

    background-image: linear-gradient(45deg, var(--accent-color), #ffc107);
    color: var(--primary-color);
    font-family: 'Poppins', sans-serif;
    font-weight: 600;
    font-size: 0.9rem;
    padding: 0.4rem 1rem;
    border-radius: 999px;
