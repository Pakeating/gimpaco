---
{/*
  Este componente renderiza el formulario principal para crear entrenamientos.
  Se comunica con el componente del modal a través de eventos de cliente.
*/}
---

<form id="workout-form" class="workout-form">
  <!-- ... form structure remains the same ... -->
  <div class="form-group workout-name-group">
    <label for="workout-name">Nombre del Entrenamiento</label>
    <input type="text" id="workout-name" name="workout-name" placeholder="Ej: Lunes - Pecho y Tríceps" required>
    <p class="error-message" id="workout-name-error"></p>
  </div>

  <fieldset class="exercises-fieldset">
    <legend>Ejercicios</legend>
    <div id="exercises-container"></div>
    <button type="button" id="add-exercise-btn" class="add-btn">+ Añadir Ejercicio</button>
  </fieldset>

  <button type="submit" class="save-workout-btn">Guardar Entrenamiento</button>
</form>

<!-- ========= TEMPLATES ========= -->
<template id="exercise-template">
    <!-- ... template content ... -->
    <div class="exercise-block" data-exercise-id="">
    <div class="exercise-header">
      <button type="button" class="toggle-exercise-btn" aria-label="Contraer/Expandir Ejercicio">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg>
      </button>
      <div class="exercise-input-wrapper">
        <input type="text" name="exercise-name" placeholder="Busca un ejercicio..." class="exercise-name-input" autocomplete="off" required>
        <input type="hidden" name="selected-exercise-id">
        <div class="suggestions-container"></div>
        <p class="error-message"></p>
      </div>
      <button type="button" class="remove-btn remove-exercise-btn" aria-label="Eliminar Ejercicio">&times;</button>
    </div>
    <div class="exercise-content">
      <div class="sets-container"></div>
      <button type="button" class="add-btn add-set-btn">+ Añadir Serie</button>
    </div>
  </div>
</template>

<template id="set-template">
    <!-- ... template content ... -->
    <div class="set-row">
    <div class="set-input-group"><label>Reps</label><input type="number" name="repetitions" placeholder="Reps" min="1" required></div>
    <div class="set-input-group"><label>Intensidad</label><input type="text" name="intensity" placeholder="Ej: 80%, RPE 8, RIR 2" required></div>
    <div class="weight-toggle-wrapper"><button type="button" class="add-weight-btn">+ Añadir Peso</button><div class="set-input-group weight-input-group" style="display: none;"><label>Peso (kg)</label><input type="number" name="weight" placeholder="Peso (kg)" min="0"></div></div>
    <button type="button" class="remove-btn remove-set-btn" aria-label="Eliminar Serie">&times;</button>
  </div>
</template>

<style>
  /* Styles remain unchanged */
:root { --primary-color: #2A2A2A; --accent-color: #008080; --white-color: #FFFFFF; --light-gray: #f5f5f5; --border-color: #ddd; --danger-color: #d9534f; --danger-color-light: #f2dede; --success-color: #28a745; }
.workout-form { background-color: var(--white-color); padding: 2.5rem; border-radius: 0.75rem; box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1); text-align: left; }
.form-group, .exercises-fieldset { margin-bottom: 2rem; }
label, legend { display: block; font-family: 'Poppins', sans-serif; font-weight: 600; font-size: 1.125rem; color: var(--primary-color); margin-bottom: 1rem; }
input[type="text"], input[type="number"] { width: 100%; padding: 0.75rem 1rem; font-family: 'Lato', sans-serif; font-size: 1rem; border: 1px solid var(--border-color); border-radius: 0.5rem; box-sizing: border-box; transition: border-color 0.2s ease, box-shadow 0.2s ease; }
input:focus { outline: none; border-color: var(--accent-color); box-shadow: 0 0 0 3px rgba(0, 128, 128, 0.2); }
.exercises-fieldset { border: 1px solid var(--border-color); border-radius: 0.5rem; padding: 1.5rem; }
.exercise-block { background-color: var(--light-gray); border: 1px solid #e0e0e0; border-radius: 0.5rem; padding: 1.5rem; margin-bottom: 1.5rem; transition: padding 0.3s ease; }
.exercise-header { display: flex; align-items: flex-start; gap: 0.5rem; user-select: none; }
.toggle-exercise-btn { background: none; border: none; cursor: pointer; padding: 0.6rem 0.5rem 0 0; color: var(--primary-color); transition: transform 0.3s ease; flex-shrink: 0; }
.exercise-input-wrapper { position: relative; flex-grow: 1; }
.suggestions-container { position: absolute; top: 100%; left: 0; right: 0; background: var(--white-color); border: 1px solid var(--border-color); border-radius: 0 0 0.5rem 0.5rem; z-index: 10; max-height: 200px; overflow-y: auto; display: none; }
.suggestion-item { padding: 0.75rem 1rem; cursor: pointer; }
.suggestion-item:hover { background-color: var(--light-gray); }
.suggestion-item.no-results { display: flex; justify-content: space-between; align-items: center; padding: 0.75rem 1rem; cursor: default !important; }
.toggle-exercise-btn svg { display: block; width: 20px; height: 20px; }
.remove-btn { background: none; border: none; color: #aaa; font-size: 1.5rem; font-weight: bold; cursor: pointer; padding: 0.3rem 0.5rem; line-height: 1; transition: color 0.2s ease; flex-shrink: 0; }
.remove-exercise-btn { font-size: 2rem; }
.remove-btn:hover { color: var(--danger-color); }
.exercise-content { overflow: hidden; transition: max-height 0.35s ease-out; max-height: 1000px; padding-left: 2rem; }
.exercise-block.is-collapsed { padding-top: 1rem; padding-bottom: 1rem; }
.exercise-block.is-collapsed > .exercise-header { margin-bottom: 0; }
.exercise-block.is-collapsed > .exercise-content { max-height: 0; }
.exercise-block.is-collapsed .toggle-exercise-btn { transform: rotate(-90deg); }
.set-row { display: grid; grid-template-columns: 1fr 1fr 1fr auto; gap: 1rem; align-items: flex-end; margin-bottom: 0.75rem; }
.set-input-group label { display: none; }
.weight-toggle-wrapper { display: flex; align-items: center; justify-content: center; }
.add-weight-btn { background-color: transparent; border: 1px dashed var(--border-color); color: #777; padding: 0.75rem 1rem; border-radius: 0.5rem; cursor: pointer; font-family: 'Lato', sans-serif; font-size: 0.9rem; width: 100%; height: 100%; transition: all 0.2s ease; }
.add-weight-btn:hover { background-color: #f0f0f0; border-color: var(--accent-color); color: var(--accent-color); }
.add-btn { font-family: 'Poppins', sans-serif; font-weight: 600; font-size: 1rem; border: none; border-radius: 999px; padding: 0.7rem 1.5rem; cursor: pointer; transition: all 0.2s ease; text-align: center; background-color: #e0e7e7; color: var(--accent-color); }
.add-btn:hover { background-color: #d0e0e0; transform: translateY(-1px); }
.add-set-btn { display: block; margin: 1rem auto 0; }
.save-workout-btn { background-image: linear-gradient(45deg, var(--accent-color), #009688); color: var(--white-color); display: block; width: 100%; margin-top: 1rem; font-family: 'Poppins', sans-serif; font-weight: 600; font-size: 1.125rem; border: none; border-radius: 999px; padding: 0.7rem 1.5rem; cursor: pointer; box-shadow: 0 4px 15px -3px rgba(0, 128, 128, 0.4); transition: all 0.2s ease; }
.save-workout-btn:hover { transform: translateY(-2px); box-shadow: 0 6px 20px -3px rgba(0, 128, 128, 0.5); }
.save-workout-btn:disabled { background: #ccc; cursor: not-allowed; }
.save-workout-btn.is-success { background-image: linear-gradient(45deg, var(--success-color), #218838); }
.save-workout-btn.is-error { background-image: linear-gradient(45deg, var(--danger-color), #c82333); }
.error-message { color: var(--danger-color); font-size: 0.875rem; margin-top: 0.5rem; display: none; }
.is-invalid { border-color: var(--danger-color) !important; background-color: var(--danger-color-light) !important; }
.create-exercise-btn-suggestion { background-image: linear-gradient(45deg, var(--accent-color), #009688); color: var(--white-color); border: none; border-radius: 999px; cursor: pointer; box-shadow: 0 2px 8px -2px rgba(0, 128, 128, 0.4); transition: all 0.2s ease; font-size: 0.8rem; padding: 0.3rem 0.8rem; }
.create-exercise-btn-suggestion:hover {  transform: translateY(-1px);  box-shadow: 0 4px 15px -3px rgba(0, 128, 128, 0.5);  }
@media (max-width: 768px) { .workout-form { padding: 1.5rem; } .exercises-fieldset { padding: 0; border: none; } .exercise-block { padding: 1rem 0; background: none; border: none; border-bottom: 1px solid #e0e0e0; border-radius: 0; } .set-row { grid-template-columns: 1fr 1fr; grid-template-rows: auto auto; gap: 1.25rem 1rem; align-items: flex-start; } .weight-toggle-wrapper { grid-column: 1 / 2; grid-row: 2 / 3; } .set-input-group label { display: block; font-size: 0.8rem; font-weight: 600; color: #555; } .remove-set-btn { grid-column: 2; grid-row: 2; justify-self: flex-end; align-self: center; margin: 0; } .set-row input::placeholder { color: transparent; } }
</style>

<script>
function initializeWorkoutForm() {
  const workoutForm = document.getElementById('workout-form');
  if (!workoutForm || workoutForm.dataset.initialized === 'true') return;
  workoutForm.dataset.initialized = 'true';

  const workoutNameInput = document.getElementById('workout-name');
  const exercisesContainer = document.getElementById('exercises-container');
  const exerciseTemplate = document.getElementById('exercise-template');
  const setTemplate = document.getElementById('set-template');
  let allExercises = [];
  let activeInput = null;

  async function loadExercises() {
    try {
      const response = await fetch('/api/get-exercises');
      if (!response.ok) throw new Error('Network response was not ok');
      allExercises = await response.json();
    } catch (error) {
      console.error('Error fetching exercises:', error);
    }
  }

  const updateSuggestions = (input) => {
    activeInput = input;
    const wrapper = input.closest('.exercise-input-wrapper');
    if (!wrapper) return;

    const suggestionsContainer = wrapper.querySelector('.suggestions-container');
    const query = input.value.toLowerCase();
    const filtered = query ? allExercises.filter(ex => ex.name.toLowerCase().includes(query)) : allExercises;

    suggestionsContainer.innerHTML = '';

    if (filtered.length > 0) {
      filtered.forEach(ex => {
        const item = document.createElement('div');
        item.textContent = ex.name;
        item.className = 'suggestion-item';
        item.dataset.id = ex.id;
        suggestionsContainer.appendChild(item);
      });
    } else if (query) {
      const item = document.createElement('div');
      item.className = 'suggestion-item no-results';
      const text = document.createElement('span');
      text.textContent = 'No se encontraron resultados.';
      const createBtn = document.createElement('button');
      createBtn.textContent = 'Crear Nuevo';
      createBtn.className = 'create-exercise-btn-suggestion';
      createBtn.type = 'button';
      item.appendChild(text);
      item.appendChild(createBtn);
      suggestionsContainer.appendChild(item);
    }
    suggestionsContainer.style.display = 'block';
  };

  const generateId = (prefix) => `${prefix}-${Date.now()}-${Math.random().toString(36).substring(2, 9)}`;
  const addSet = (setsContainer) => setsContainer.appendChild(setTemplate.content.cloneNode(true));

  const addExercise = (shouldFocus = true) => {
    document.querySelectorAll('.exercise-block:not(.is-collapsed)').forEach(b => b.classList.add('is-collapsed'));
    const newExercise = exerciseTemplate.content.cloneNode(true).firstElementChild;
    newExercise.dataset.exerciseId = generateId('ex-block');
    addSet(newExercise.querySelector('.sets-container'));
    exercisesContainer.appendChild(newExercise);
    if (shouldFocus) {
      newExercise.querySelector('.exercise-name-input').focus();
    }
  };

  const resetValidation = (form) => {
    form.querySelectorAll('.is-invalid').forEach(el => el.classList.remove('is-invalid'));
    form.querySelectorAll('.error-message').forEach(el => { el.textContent = ''; el.style.display = 'none'; });
  };

  const showValidationError = (inputElement, message) => {
    inputElement.classList.add('is-invalid');
    const errorMessageElement = inputElement.parentElement.querySelector('.error-message');
    if (errorMessageElement) { errorMessageElement.textContent = message; errorMessageElement.style.display = 'block'; }
  };

  // INITIALIZATION
  loadExercises();
  workoutNameInput.focus(); // Set focus on the workout name input
  if (exercisesContainer.children.length === 0) {
    addExercise(false); // Add the first exercise block without focusing it
  }

  // EVENT LISTENERS
  document.addEventListener('exercise-created', (e) => {
    const newExercise = e.detail;
    if (newExercise && newExercise.id) {
        allExercises.push(newExercise);
        if (activeInput) {
            activeInput.value = newExercise.name;
            const wrapper = activeInput.closest('.exercise-input-wrapper'); // CORRECTED LINE
            wrapper.querySelector('[name="selected-exercise-id"]').value = newExercise.id;
            wrapper.querySelector('.suggestions-container').style.display = 'none';
            activeInput = null;
        }
    }
  });

  document.addEventListener('exercise-modal-closed', loadExercises);

  workoutForm.addEventListener('focusin', (e) => {
    if (e.target.classList.contains('exercise-name-input')) {
      updateSuggestions(e.target);
    }
  });

  workoutForm.addEventListener('input', (e) => {
    if (e.target.classList.contains('exercise-name-input')) {
      const input = e.target;
      const wrapper = input.closest('.exercise-input-wrapper');
      if (!wrapper) return;
      wrapper.querySelector('[name="selected-exercise-id"]').value = '';
      input.classList.remove('is-invalid');
      wrapper.querySelector('.error-message').style.display = 'none';
      updateSuggestions(input);
    }
  });

  workoutForm.addEventListener('click', (e) => {
    if (e.target.id === 'add-exercise-btn') {
      addExercise(); // Add new exercise and focus it
    } else if (e.target.classList.contains('create-exercise-btn-suggestion')) {
      e.preventDefault();
      const exerciseName = e.target.closest('.exercise-input-wrapper').querySelector('.exercise-name-input').value;
      document.dispatchEvent(new CustomEvent('open-create-exercise-modal', { detail: { exerciseName } }));
    } else if (e.target.classList.contains('suggestion-item') && e.target.dataset.id) {
      const wrapper = e.target.closest('.exercise-input-wrapper');
      wrapper.querySelector('.exercise-name-input').value = e.target.textContent;
      wrapper.querySelector('[name="selected-exercise-id"]').value = e.target.dataset.id;
      wrapper.querySelector('.suggestions-container').style.display = 'none';
      e.preventDefault();
    } else {
        const header = e.target.closest('.exercise-header');
        if (header && !e.target.closest('input, .remove-btn, .suggestions-container')) {
        header.parentElement.classList.toggle('is-collapsed');
        }
        if (e.target.classList.contains('add-set-btn')) addSet(e.target.closest('.exercise-content').querySelector('.sets-container'));
        if (e.target.classList.contains('remove-set-btn')) e.target.closest('.set-row').remove();
        if (e.target.classList.contains('remove-exercise-btn')) e.target.closest('.exercise-block').remove();
        if (e.target.classList.contains('add-weight-btn')) {
            e.preventDefault();
            const wrapper = e.target.closest('.weight-toggle-wrapper');
            const weightInputGroup = wrapper.querySelector('.weight-input-group');
            e.target.style.display = 'none';
            weightInputGroup.style.display = 'block';
            weightInputGroup.querySelector('input').focus();
        }
    }
  });

  document.addEventListener('click', (e) => {
    if (!e.target.closest('.exercise-input-wrapper')) {
      document.querySelectorAll('.suggestions-container').forEach(c => c.style.display = 'none');
    }
  });

  workoutForm.addEventListener('submit', async (e) => {
    e.preventDefault();
    resetValidation(workoutForm);
    let isFormValid = true;

    const exerciseInputs = workoutForm.querySelectorAll('.exercise-name-input');
    for (const input of exerciseInputs) {
      const hiddenInput = input.closest('.exercise-input-wrapper').querySelector('[name="selected-exercise-id"]');
      if (!hiddenInput.value) {
        isFormValid = false;
        showValidationError(input, 'Por favor, selecciona un ejercicio válido de la lista.');
      }
    }

    if (!isFormValid) return;

    const saveButton = workoutForm.querySelector('.save-workout-btn');
    saveButton.textContent = 'Guardando...';
    saveButton.disabled = true;

    const workoutData = { /* ... */ }; // The submission logic remains the same

    // ... fetch logic ...
  });
}

document.addEventListener('astro:page-load', initializeWorkoutForm);
</script>
